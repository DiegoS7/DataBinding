<Window x:Class="data.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:data"
        mc:Ignorable="d"
        Title="Ejercicios XAML" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="154" Margin="10,10,0,0" Name="txtmensaje">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.33" ScaleY="4"/>
                    <RotateTransform Angle="-10"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

    </Grid>
</Window>
